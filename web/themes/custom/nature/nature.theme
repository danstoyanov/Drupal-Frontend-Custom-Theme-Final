/**
 * Implements hook_theme_suggestions_HOOK_alter() to add a template suggestion for node 3.
 */
function nature_suggestions_node_alter(array &$suggestions, array $variables) {
  if ($variables['node']->id() == 3) {
    $suggestions[] = 'node__3';
  }
}

